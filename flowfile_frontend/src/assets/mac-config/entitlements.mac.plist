<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
  <dict>
    <!-- Required for Electron's V8 engine -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    <!-- Required for loading bundled native modules -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    <!-- Network access for API calls and Docker communication -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    <!-- File access for user-selected files (drag & drop, file dialogs) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    <!-- Restricted file access - only directories the app actually needs -->
    <key>com.apple.security.temporary-exception.files.absolute-path.read-write</key>
    <array>
      <!-- Flowfile application data directory -->
      <string>/Users/</string>
      <!-- Temp directory for processing -->
      <string>/tmp/</string>
      <string>/var/folders/</string>
      <!-- Docker socket for container management -->
      <string>/var/run/docker.sock</string>
    </array>
  </dict>
</plist>