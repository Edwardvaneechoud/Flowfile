{
  "appId": "com.flowfile.app",
  "productName": "Flowfile",
  "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
  "asar": true,
  "compression": "normal",
  "directories": {
    "output": "dist",
    "buildResources": "src/assets/icons"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "shortcutName": "Flowfile",
    "installerIcon": "src/assets/icons/win/icon.ico",
    "uninstallerIcon": "src/assets/icons/win/icon.ico",
    "installerHeaderIcon": "src/assets/icons/win/icon.ico"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/icons/win/icon.ico",
    "extraFiles": [
      {
        "from": "../services_dist",
        "to": "resources/flowfile-services"
      }
    ]
  },
  "linux": {
    "target": [
      {
        "target": "AppImage",
        "arch": ["x64"]
      },
      {
        "target": "deb",
        "arch": ["x64"]
      }
    ],
    "icon": "src/assets/icons/png",
    "category": "Utility",
    "extraFiles": [
      {
        "from": "../services_dist",
        "to": "resources/flowfile-services"
      }
    ]
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "src/assets/icons/mac/icon.icns",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "entitlements": "src/assets/mac-config/entitlements.mac.plist",
    "entitlementsInherit": "src/assets/mac-config/entitlements.mac.plist",
    "signIgnore": [
      "Python\\.framework"
    ],
    "extraFiles": [
      {
        "from": "../services_dist",
        "to": "resources/flowfile-services"
      },
      {
        "from": "src/assets/mac-config/Info.plist",
        "to": "Contents/Info.plist"
      }
    ]
  },
  "dmg": {
    "contents": [
      {
        "x": 130,
        "y": 220
      },
      {
        "x": 410,
        "y": 220,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "files": [
    {
      "from": "build/main",
      "to": "main",
      "filter": ["**/*"]
    },
    {
      "from": "src/public",
      "to": "public",
      "filter": ["**/*"]
    },
    {
      "from": "build/renderer",
      "to": "renderer",
      "filter": ["**/*"]
    },
    {
      "from": "src/main/static",
      "to": "static",
      "filter": ["**/*"]
    },
    "package.json",
    "node_modules/**",
    "!node_modules/electron/**",
    "!node_modules/electron-builder/**",
    "!node_modules/app-builder-bin/**",
    "!node_modules/typescript/**",
    "!node_modules/esbuild/**",
    "!node_modules/@esbuild/**",
    "!node_modules/7zip-bin/**",
    "!node_modules/vite/**",
    "!node_modules/@vitejs/**",
    "!node_modules/playwright/**",
    "!node_modules/@playwright/**",
    "!node_modules/eslint/**",
    "!node_modules/prettier/**"
  
  ]
}
