<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding-top: 80px;
    overflow: hidden;
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      radial-gradient(ellipse 80% 50% at 50% -20%, rgba(99, 102, 241, 0.15) 0%, transparent 50%),
      radial-gradient(ellipse 60% 40% at 80% 60%, rgba(249, 115, 22, 0.08) 0%, transparent 50%),
      linear-gradient(rgba(99, 102, 241, 0.03) 1px, transparent 1px),
      linear-gradient(90deg, rgba(99, 102, 241, 0.03) 1px, transparent 1px);
    background-size: 100% 100%, 100% 100%, 60px 60px, 60px 60px;
    pointer-events: none;
  }

  .hero-content {
    position: relative;
    text-align: center;
    max-width: 1000px;
    margin: 0 auto;
    padding: 2rem;
  }

  .hero-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 1rem;
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 100px;
    font-size: 0.875rem;
    color: var(--color-accent);
    font-weight: 500;
    margin-bottom: 2rem;
  }

  .badge-icon {
    font-size: 1rem;
  }

  .hero-title {
    font-size: clamp(2.5rem, 6vw, 4.5rem);
    font-weight: 700;
    line-height: 1.1;
    margin-bottom: 1.5rem;
  }

  .hero-title .gradient-text {
    display: block;
  }

  .hero-subtitle {
    font-size: clamp(1.1rem, 2vw, 1.35rem);
    color: var(--color-text-muted);
    max-width: 600px;
    margin: 0 auto 2.5rem;
    line-height: 1.7;
  }

  .hero-actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.1rem;
  }

  /* Flow Visualization */
  .flow-visualization {
    margin-bottom: 3rem;
  }

  .flow-window {
    max-width: 700px;
    margin: 0 auto;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.4);
  }

  .flow-header {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 10px 14px;
    background: var(--color-bg-card);
    border-bottom: 1px solid var(--color-border);
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  .dot.red { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green { background: #28c840; }

  .flow-title {
    margin-left: 10px;
    font-size: 12px;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
  }

  .flow-canvas {
    padding: 24px;
    background:
      radial-gradient(circle at 50% 50%, rgba(99, 102, 241, 0.04) 0%, transparent 60%),
      linear-gradient(rgba(99, 102, 241, 0.015) 1px, transparent 1px),
      linear-gradient(90deg, rgba(99, 102, 241, 0.015) 1px, transparent 1px);
    background-size: 100% 100%, 30px 30px, 30px 30px;
  }

  .pipeline {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0;
    margin-bottom: 20px;
  }

  /* Flow Nodes */
  .flow-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 6px;
  }

  .node-icon {
    width: 48px;
    height: 48px;
    border-radius: 10px;
    background: var(--color-bg-card);
    border: 2px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .node-icon svg {
    width: 22px;
    height: 22px;
  }

  .node-name {
    font-size: 11px;
    font-weight: 600;
    color: var(--color-text-muted);
  }

  /* Node colors */
  .node-input .node-icon {
    border-color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
    animation: nodePulse 2s ease-in-out infinite;
  }
  .node-input .node-icon svg { stroke: #22c55e; }
  .node-input .node-name { color: #22c55e; }

  .node-transform .node-icon {
    border-color: #6366f1;
    background: rgba(99, 102, 241, 0.1);
    animation: nodePulse 2s ease-in-out infinite 0.3s;
  }
  .node-transform .node-icon svg { stroke: #6366f1; }
  .node-transform .node-name { color: #6366f1; }

  .node-aggregate .node-icon {
    border-color: #f97316;
    background: rgba(249, 115, 22, 0.1);
    animation: nodePulse 2s ease-in-out infinite 0.6s;
  }
  .node-aggregate .node-icon svg { stroke: #f97316; }
  .node-aggregate .node-name { color: #f97316; }

  .node-output .node-icon {
    border-color: #ec4899;
    background: rgba(236, 72, 153, 0.1);
    animation: nodePulse 2s ease-in-out infinite 0.9s;
  }
  .node-output .node-icon svg { stroke: #ec4899; }
  .node-output .node-name { color: #ec4899; }

  @keyframes nodePulse {
    0%, 100% { box-shadow: 0 0 0 0 transparent; }
    50% { box-shadow: 0 0 12px 2px currentColor; }
  }

  /* Connectors */
  .flow-connector {
    width: 50px;
    height: 24px;
    margin-bottom: 18px;
  }

  .flow-connector svg {
    width: 100%;
    height: 100%;
    overflow: visible;
  }

  .connector-line {
    stroke-width: 2;
    stroke-dasharray: 6 4;
    opacity: 0.6;
  }

  .data-particle {
    filter: drop-shadow(0 0 4px currentColor);
  }

  /* Data Preview */
  .data-preview {
    background: var(--color-bg-card);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    overflow: hidden;
  }

  .preview-label {
    padding: 8px 12px;
    font-size: 11px;
    font-weight: 600;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    border-bottom: 1px solid var(--color-border);
    background: var(--color-bg-elevated);
  }

  .preview-table {
    font-family: var(--font-mono);
    font-size: 12px;
  }

  .table-row {
    display: grid;
    grid-template-columns: 40px 80px 70px;
    gap: 8px;
    padding: 8px 12px;
    border-bottom: 1px solid var(--color-border);
  }

  .table-row.header {
    background: var(--color-bg-elevated);
    color: var(--color-text-muted);
    font-weight: 600;
  }

  .table-row.data-row {
    color: var(--color-text);
  }

  .table-row.data-row:last-child {
    border-bottom: none;
  }

  .value-cell {
    color: #22c55e;
  }

  /* Animated rows */
  .row-1 { animation: rowHighlight 3s ease-in-out infinite; }
  .row-2 { animation: rowHighlight 3s ease-in-out infinite 1s; }
  .row-3 { animation: rowHighlight 3s ease-in-out infinite 2s; }

  @keyframes rowHighlight {
    0%, 100% { background: transparent; }
    50% { background: rgba(99, 102, 241, 0.1); }
  }

  .preview-status {
    display: flex;
    align-items: center;
    gap: 8px;
    padding: 8px 12px;
    font-size: 11px;
    color: var(--color-text-muted);
    background: var(--color-bg-elevated);
    border-top: 1px solid var(--color-border);
  }

  .status-dot {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background: #22c55e;
    animation: statusBlink 1s ease-in-out infinite;
  }

  @keyframes statusBlink {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  /* Stats */
  .hero-stats {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    flex-wrap: wrap;
  }

  .stat {
    text-align: center;
  }

  .stat-value {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--color-text);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--color-text-muted);
  }

  .stat-divider {
    width: 1px;
    height: 40px;
    background: var(--color-border);
  }

  @media (max-width: 700px) {
    .flow-window {
      margin: 0 -1rem;
      border-radius: 0;
      border-left: none;
      border-right: none;
    }

    .pipeline {
      gap: 0;
    }

    .flow-connector {
      width: 30px;
    }

    .node-icon {
      width: 40px;
      height: 40px;
    }

    .node-icon svg {
      width: 18px;
      height: 18px;
    }

    .node-name {
      font-size: 10px;
    }

    .table-row {
      grid-template-columns: 30px 60px 60px;
      font-size: 11px;
    }
  }

  @media (max-width: 600px) {
    .stat-divider {
      display: none;
    }

    .hero-stats {
      gap: 1.5rem;
    }

    .stat {
      flex: 1 1 40%;
    }
  }
</style>
