<section class="install-section" id="install">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Get Started</span>
      <h2 class="section-title">Up and running in seconds</h2>
      <p class="section-description">
        Install Flowfile with pip and launch the visual editor with a single command.
      </p>
    </div>

    <div class="install-flow">
      <!-- Connection Lines SVG -->
      <svg class="flow-connections" viewBox="0 0 700 60" preserveAspectRatio="xMidYMid meet">
        <defs>
          <linearGradient id="flowGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" stop-color="#6366f1" stop-opacity="0.7" />
            <stop offset="50%" stop-color="#f97316" stop-opacity="0.7" />
            <stop offset="100%" stop-color="#22c55e" stop-opacity="0.7" />
          </linearGradient>
          <marker id="arrowhead" markerWidth="10" markerHeight="7" refX="9" refY="3.5" orient="auto">
            <polygon points="0 0, 10 3.5, 0 7" fill="#6366f1" opacity="0.7" />
          </marker>
        </defs>
        <path class="flow-line" d="M 95 30 L 270 30" marker-end="url(#arrowhead)" />
        <path class="flow-line" d="M 430 30 L 605 30" marker-end="url(#arrowhead)" />
      </svg>

      <div class="flow-steps">
        <!-- Step 1: Install -->
        <div class="flow-step">
          <div class="step-node" data-step="1">
            <div class="node-icon install-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4" />
                <polyline points="7 10 12 15 17 10" />
                <line x1="12" y1="15" x2="12" y2="3" />
              </svg>
            </div>
            <span class="step-label">Install</span>
          </div>
          <div class="step-content">
            <div class="code-block-wrapper">
              <code class="install-code">pip install flowfile</code>
              <button class="copy-btn" data-copy="pip install flowfile" aria-label="Copy command">
                <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" />
                </svg>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                  <polyline points="20 6 9 17 4 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Step 2: Launch -->
        <div class="flow-step">
          <div class="step-node" data-step="2">
            <div class="node-icon launch-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <polygon points="5 3 19 12 5 21 5 3" />
              </svg>
            </div>
            <span class="step-label">Launch</span>
          </div>
          <div class="step-content">
            <div class="code-block-wrapper">
              <code class="install-code">flowfile run ui</code>
              <button class="copy-btn" data-copy="flowfile run ui" aria-label="Copy command">
                <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
                  <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" />
                </svg>
                <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
                  <polyline points="20 6 9 17 4 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Step 3: Build -->
        <div class="flow-step">
          <div class="step-node" data-step="3">
            <div class="node-icon build-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                <rect x="3" y="3" width="7" height="7" rx="1" />
                <rect x="14" y="3" width="7" height="7" rx="1" />
                <rect x="3" y="14" width="7" height="7" rx="1" />
                <rect x="14" y="14" width="7" height="7" rx="1" />
              </svg>
            </div>
            <span class="step-label">Build</span>
          </div>
          <div class="step-content">
            <p class="step-description">
              Drag & drop nodes to create your data pipeline
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="install-cta">
      <a href="https://edwardvaneechoud.github.io/Flowfile/quickstart/" class="btn btn-secondary" target="_blank" rel="noopener">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z" />
          <path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z" />
        </svg>
        Read the Docs
      </a>
      <a href="https://github.com/Edwardvaneechoud/Flowfile" class="btn btn-secondary" target="_blank" rel="noopener">
        <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
        View on GitHub
      </a>
    </div>
  </div>
</section>

<style>
  .install-section {
    padding: 6rem 2rem;
    background: var(--color-bg-elevated);
  }

  .install-flow {
    position: relative;
    max-width: 800px;
    margin: 0 auto 3rem;
  }

  .flow-connections {
    position: absolute;
    top: 28px;
    left: 0;
    width: 100%;
    height: 60px;
    pointer-events: none;
    z-index: 0;
  }

  .flow-line {
    stroke: url(#flowGradient);
    stroke-width: 2;
    fill: none;
    stroke-dasharray: 8 4;
    animation: flowDash 1s linear infinite;
  }

  @keyframes flowDash {
    to {
      stroke-dashoffset: -12;
    }
  }

  .flow-steps {
    display: flex;
    justify-content: space-between;
    position: relative;
    z-index: 1;
  }

  .flow-step {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    max-width: 220px;
  }

  .step-node {
    display: flex;
    flex-direction: column;
    align-items: center;
    cursor: default;
  }

  .node-icon {
    width: 56px;
    height: 56px;
    border-radius: 12px;
    background: var(--color-bg-card);
    border: 2px solid var(--color-border);
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .node-icon svg {
    width: 24px;
    height: 24px;
  }

  .node-icon.install-icon {
    border-color: #6366f1;
    background: rgba(99, 102, 241, 0.1);
  }
  .node-icon.install-icon svg {
    stroke: #6366f1;
  }

  .node-icon.launch-icon {
    border-color: #f97316;
    background: rgba(249, 115, 22, 0.1);
  }
  .node-icon.launch-icon svg {
    stroke: #f97316;
  }

  .node-icon.build-icon {
    border-color: #22c55e;
    background: rgba(34, 197, 94, 0.1);
  }
  .node-icon.build-icon svg {
    stroke: #22c55e;
  }

  .step-label {
    margin-top: 8px;
    font-size: 13px;
    font-weight: 600;
    color: var(--color-text);
  }

  .step-content {
    margin-top: 16px;
    width: 100%;
  }

  .code-block-wrapper {
    display: flex;
    align-items: center;
    background: var(--color-bg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    padding: 0.625rem 0.875rem;
    gap: 0.75rem;
  }

  .install-code {
    flex: 1;
    font-family: var(--font-mono);
    font-size: 0.85rem;
    color: var(--color-accent);
    white-space: nowrap;
  }

  .copy-btn {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
    flex-shrink: 0;
  }

  .copy-btn:hover {
    color: var(--color-text);
  }

  .copy-btn .check-icon {
    color: #22c55e;
  }

  .step-description {
    color: var(--color-text-muted);
    font-size: 0.85rem;
    line-height: 1.5;
    text-align: center;
  }

  .install-cta {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 700px) {
    .flow-connections {
      display: none;
    }

    .flow-steps {
      flex-direction: column;
      align-items: center;
      gap: 2rem;
    }

    .flow-step {
      max-width: 280px;
      position: relative;
    }

    .flow-step:not(:last-child)::after {
      content: '';
      position: absolute;
      bottom: -1.25rem;
      left: 50%;
      transform: translateX(-50%);
      width: 2px;
      height: 16px;
      background: linear-gradient(to bottom, #6366f1, #f97316);
      opacity: 0.5;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtns = document.querySelectorAll('.copy-btn');

    copyBtns.forEach(btn => {
      btn.addEventListener('click', async () => {
        const text = btn.dataset.copy;
        const copyIcon = btn.querySelector('.copy-icon');
        const checkIcon = btn.querySelector('.check-icon');

        try {
          await navigator.clipboard.writeText(text);
          copyIcon.style.display = 'none';
          checkIcon.style.display = 'block';

          setTimeout(() => {
            copyIcon.style.display = 'block';
            checkIcon.style.display = 'none';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    });
  });
</script>
