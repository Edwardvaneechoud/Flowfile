<section class="code-section" id="code">
  <div class="container">
    <div class="section-header">
      <span class="section-label">Python API</span>
      <h2 class="section-title">Same pipeline, in code</h2>
      <p class="section-description">
        Prefer coding? Build the exact same pipeline using the Flowfile Python API.
        Export visual flows as code, or write pipelines programmatically.
      </p>
    </div>

    <div class="code-window">
      <div class="code-header">
        <span class="dot red"></span>
        <span class="dot yellow"></span>
        <span class="dot green"></span>
        <span class="code-filename">pipeline.py</span>
        <button class="copy-btn" id="copy-code-btn" aria-label="Copy code">
          <svg class="copy-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="9" y="9" width="13" height="13" rx="2" ry="2" />
            <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1" />
          </svg>
          <svg class="check-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display: none;">
            <polyline points="20 6 9 17 4 12" />
          </svg>
        </button>
      </div>
      <div class="code-content">
        <pre><code><span class="line"><span class="kw">import</span> flowfile_frame <span class="kw">as</span> ff</span>
<span class="line"></span>
<span class="line"><span class="cm"># Read data from CSV</span></span>
<span class="line">df = ff.from_csv(<span class="st">"sales_data.csv"</span>)</span>
<span class="line"></span>
<span class="line"><span class="cm"># Filter rows where sales > 1000</span></span>
<span class="line">filtered = df.filter(ff.col(<span class="st">"sales"</span>) > <span class="nu">1000</span>)</span>
<span class="line"></span>
<span class="line"><span class="cm"># Group by category and aggregate</span></span>
<span class="line">result = (</span>
<span class="line">    filtered</span>
<span class="line">    .group_by(<span class="st">"category"</span>)</span>
<span class="line">    .agg(</span>
<span class="line">        ff.sum(<span class="st">"sales"</span>).alias(<span class="st">"total_sales"</span>),</span>
<span class="line">        ff.sum(<span class="st">"quantity"</span>).alias(<span class="st">"total_quantity"</span>),</span>
<span class="line">        ff.count().alias(<span class="st">"count"</span>)</span>
<span class="line">    )</span>
<span class="line">)</span>
<span class="line"></span>
<span class="line"><span class="cm"># Export to Parquet</span></span>
<span class="line">result.to_parquet(<span class="st">"output.parquet"</span>)</span></code></pre>
      </div>
    </div>

    <div class="code-features">
      <div class="feature">
        <div class="feature-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <path d="M13 2L3 14h9l-1 8 10-12h-9l1-8z" />
          </svg>
        </div>
        <span>Polars-like syntax</span>
      </div>
      <div class="feature">
        <div class="feature-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <polyline points="16 18 22 12 16 6" />
            <polyline points="8 6 2 12 8 18" />
          </svg>
        </div>
        <span>Export visual flows as code</span>
      </div>
      <div class="feature">
        <div class="feature-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
            <circle cx="12" cy="12" r="10" />
            <polyline points="12 6 12 12 16 14" />
          </svg>
        </div>
        <span>Lazy evaluation</span>
      </div>
    </div>
  </div>
</section>

<style>
  .code-section {
    padding: 6rem 2rem;
    background: var(--color-bg);
  }

  .code-window {
    max-width: 680px;
    margin: 0 auto 2.5rem;
    background: var(--color-bg-elevated);
    border: 1px solid var(--color-border);
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  }

  .code-header {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 10px 14px;
    background: var(--color-bg-card);
    border-bottom: 1px solid var(--color-border);
  }

  .dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
  }
  .dot.red { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green { background: #28c840; }

  .code-filename {
    margin-left: 10px;
    font-size: 12px;
    color: var(--color-text-muted);
    font-family: var(--font-mono);
    flex: 1;
  }

  .copy-btn {
    background: none;
    border: none;
    color: var(--color-text-muted);
    cursor: pointer;
    padding: 4px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: color 0.2s ease;
  }

  .copy-btn:hover {
    color: var(--color-text);
  }

  .copy-btn .check-icon {
    color: #22c55e;
  }

  .code-content {
    padding: 1.25rem;
    overflow-x: auto;
  }

  .code-content pre {
    margin: 0;
    font-family: var(--font-mono);
    font-size: 13px;
    line-height: 1.7;
  }

  .code-content code {
    color: var(--color-text);
  }

  .line {
    display: block;
  }

  .kw { color: #c792ea; }
  .st { color: #c3e88d; }
  .nu { color: #f78c6c; }
  .cm { color: #676e95; font-style: italic; }

  .code-features {
    display: flex;
    justify-content: center;
    gap: 2.5rem;
    flex-wrap: wrap;
  }

  .feature {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--color-text-muted);
    font-size: 0.9rem;
  }

  .feature-icon {
    width: 32px;
    height: 32px;
    border-radius: 8px;
    background: rgba(99, 102, 241, 0.1);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .feature-icon svg {
    width: 16px;
    height: 16px;
    stroke: var(--color-primary);
  }

  @media (max-width: 600px) {
    .code-features {
      flex-direction: column;
      align-items: center;
      gap: 1rem;
    }

    .code-content pre {
      font-size: 11px;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const copyBtn = document.getElementById('copy-code-btn');
    const codeContent = `import flowfile_frame as ff

# Read data from CSV
df = ff.from_csv("sales_data.csv")

# Filter rows where sales > 1000
filtered = df.filter(ff.col("sales") > 1000)

# Group by category and aggregate
result = (
    filtered
    .group_by("category")
    .agg(
        ff.sum("sales").alias("total_sales"),
        ff.sum("quantity").alias("total_quantity"),
        ff.count().alias("count")
    )
)

# Export to Parquet
result.to_parquet("output.parquet")`;

    if (copyBtn) {
      copyBtn.addEventListener('click', async () => {
        const copyIcon = copyBtn.querySelector('.copy-icon');
        const checkIcon = copyBtn.querySelector('.check-icon');

        try {
          await navigator.clipboard.writeText(codeContent);
          copyIcon.style.display = 'none';
          checkIcon.style.display = 'block';

          setTimeout(() => {
            copyIcon.style.display = 'block';
            checkIcon.style.display = 'none';
          }, 2000);
        } catch (err) {
          console.error('Failed to copy:', err);
        }
      });
    }
  });
</script>
